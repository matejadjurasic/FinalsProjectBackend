<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FitnessPal.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FitnessPal.Maui.Views"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="{OnPlatform 'diary.png', iOS='diary.png'}"
            Route="MainPage" />
        <ShellContent
            Title="Diary"
            ContentTemplate="{DataTemplate local:LogPage}"
            Icon="{OnPlatform 'diary.png', iOS='diary.png'}"
            Route="Log" />
        <ShellContent
            Title="Goals"
            ContentTemplate="{DataTemplate local:GoalsPage}"
            Icon="{OnPlatform 'diary.png', iOS='diary.png'}"
            Route="Goals" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Icon="{OnPlatform 'diary.png', iOS='diary.png'}"
            Route="Profile" />
    </TabBar>
</Shell>
